{
  "name": "bargainer-mcp-client",
  "version": "1.0.0",
  "description": "MCP client for shopping deals from Slickdeals and similar websites",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "web": "node ui/server.js",
    "dev:web": "nodemon ui/server.js",
    "test": "node scripts/test-setup.mjs",
    "test:server": "tsx test/test-server.ts",
    "demo": "node scripts/demo.mjs",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "deals",
    "slickdeals",
    "shopping",
    "bargains"
  ],
  "author": "Karthik Sivaram M",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/karthiksivaramms/bargainer-mcp-client.git"
  },
  "homepage": "https://github.com/karthiksivaramms/bargainer-mcp-client#readme",
  "bugs": {
    "url": "https://github.com/karthiksivaramms/bargainer-mcp-client/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
